<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vishalbhagat.project.GameActivity" >
 
    <LinearLayout
    android:id="@+id/adlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
   android:orientation="vertical"
     >

</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/adlayout"
    android:layout_below="@+id/adlayout"
    android:layout_margin="@dimen/margin"
    android:layout_marginTop="36dp"
    android:weightSum="2" >

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/textView" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Timer"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/textView" />

</LinearLayout>

<TextView
    android:id="@+id/equation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout1"
    android:layout_centerHorizontal="true"
    android:layout_margin="@dimen/margin"
    android:layout_marginTop="18dp"
    android:text="___________"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="@dimen/eqView" />

<EditText
    android:id="@+id/answer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/equation"
    android:layout_margin="@dimen/margin"
    android:ems="10"
    android:hint="Answer"
    android:inputType="numberDecimal|numberSigned"
    android:textSize="@dimen/eqView" />

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/answer"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/margin"
    android:weightSum="2" >

    <Button
        android:id="@+id/start"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/startbtnhith"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/selectbtn"
        android:text="Start"
        android:textSize="@dimen/textView" />

    <Button
        android:id="@+id/ok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/startbtnhith"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/selectbtn"
        android:text="Ok"
        android:textSize="@dimen/textView" />

</LinearLayout>


</RelativeLayout>